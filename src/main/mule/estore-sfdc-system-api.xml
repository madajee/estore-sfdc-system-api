            <salesforce:salesforce-query><![CDATA[${leadbyid.select}]]></salesforce:salesforce-query>
            <salesforce:parameters><![CDATA[#[output application/java
---
{
	'Id' : vars.Id
}]]]></salesforce:parameters>
        </salesforce:query>
		<logger level="INFO" doc:name="Logger" doc:id="db609a09-688f-4cb0-a0fc-8b9f69db8de2" message="#[output application/json --- payload]" />
        <ee:transform doc:name="Transform Message" doc:id="c3ae6e7c-22e9-4020-b58e-fcfbccb5a3f2">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
    <flow name="get:\lead:estore-sfdc-system-api-config">
        <ee:transform doc:name="queryparameters" doc:id="e6f97375-b8ee-48a5-b874-fd6eec691452" >
			<ee:message >
			</ee:message>
			<ee:variables >
				<ee:set-variable variableName="queryparameters" ><![CDATA[%dw 2.0
output application/json
---
{
	"leadname": attributes.queryParams.'leadname' default null,
	"company": attributes.queryParams.'company' default null
}]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<logger level="INFO" doc:name="Logger" doc:id="8353b233-f1cc-44c7-8f1d-b2f62c249473" message='#[vars.queryparameters]' />
		<choice doc:name="Choice" doc:id="4a6d7219-eb28-47b5-a785-d92648b9fbf9" >
			<when expression="#[vars.queryparameters.leadname != null]">
				<salesforce:query doc:name="Lead" doc:id="e79970b3-b775-4e2c-bef8-dc2a1b860e9c" config-ref="Salesforce_Config">
            <salesforce:salesforce-query><![CDATA[${leadbyleadname.select}]]></salesforce:salesforce-query>
            <salesforce:parameters><![CDATA[#[output application/java
---
{
	'leadname' : vars.queryparameters.leadname
}]]]></salesforce:parameters>
        </salesforce:query>
			</when>
			<when expression="#[vars.queryparameters.company != null]">
				<salesforce:query doc:name="Lead" doc:id="8c25c3f4-676a-456e-a936-e321970f4125" config-ref="Salesforce_Config">
            <salesforce:salesforce-query><![CDATA[${leadbycompany.select}]]></salesforce:salesforce-query>
            <salesforce:parameters><![CDATA[#[output application/java
---
{
	'company' : vars.queryparameters.company
}]]]></salesforce:parameters>
        </salesforce:query>
			</when>
			<otherwise >
				<logger level="INFO" doc:name="Logger" doc:id="8594068a-c2ca-4480-9167-32f2dd46e973" message="#['queryparams not provided.']"/>
			</otherwise>
		</choice>
        <logger level="INFO" doc:name="Logger" doc:id="072f946b-3177-4db6-9803-5d25df2c2a90" message="#[output application/json --- payload]" />
        <ee:transform doc:name="Transform Message" doc:id="e8a135d4-f08d-44b3-a987-b990946d401c">
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
payload]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
    <flow name="post:\removeleads:application\json:estore-sfdc-system-api-config">
