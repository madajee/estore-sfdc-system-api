if (vars.queryparameters.leadname != null)
{
	"query": "SELECT ID, Name FROM lead where name = " ++ "':leadname'"
}
else if (vars.queryparameters.company != null) 
{
	"query": "SELECT ID, Name FROM lead where company = " ++ "':company'"
}	
else
{
	"query": "SELECT ID, Name FROM lead limit 10" 
}
	]]></ee:set-variable>
			</ee:variables>
		</ee:transform>
		<logger level="INFO" doc:name="Logger" doc:id="e1529e81-bd00-417f-b47e-6bca388c1aeb" message="#[output application/json --- vars.dynamicquery]" />
