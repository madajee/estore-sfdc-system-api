/account:
  get:
     queryParameters:
      accountname:
        description: accouunt name
        type: string
        required: true
     description: get account
     responses:
      200:
        body:
          application/json:
  /{Id}:
    put:
      description: update account
      body:
          application/json:
            example: |
              {
                  "accountcurrency": "JPY"
              }
  /contract:
    get:
       queryParameters:
        accountname:
          description: account name
          type: string
          required: true
       description: get contracts on the opportunity
       responses:
        200:
          body:
            application/json:
    post:
      description: create contract for the account
      body:
          application/json:
            example: |
              {
                  "accountname": "Boy Scouts of the Southwest",
                  "contracts": [
                      {
                          "contractstartdate": "07-02-2024",
                          "contractterm": "12"
                      },
                      {
                          "contractstartdate": "07-02-2025",
                          "contractterm": "12"
                      }
                  ]
              }
      responses:
        200:
          body:
            application/json:
/order:
    get:
     queryParameters:
      contractnumber:
        description: contract number
        type: string
        required: true
     description: get orders for the contracts
     responses:
      200:
        body:
          application/json:
    post:
      description: create orders for the contract
      body:
          application/json:
            example: |
              {
                  "contractnumber": "00000110",
                  "opportunityname": "BSofSW - Ground-mounted Panels"
