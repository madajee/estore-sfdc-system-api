/opportunity:
  get:
     queryParameters:
      opportunityname:
        description: opportunity name
        type: string
        required: true
     description: get opportunity
     responses:
      200:
        body:
          application/json:
  /{Id}:
    put:
      description: update opportunity
      body:
          application/json:
            example: |
              {
                  "opportunitycurrency": "JPY",
                  "opportunitypricebook": "Enterprise"
              }
  /product:
    post:
      description: create opportunity product
      body:
          application/json:
            example: |
                  {
                    "opportunityname": "Saito - Ground-mounted Panels",
                    "products": [
                        {
                          "productcode": "SPG-01",
                          "quantity": 35
                        },
                        {
                          "productcode": "SPG-02",
                          "quantity": 20
                        }
                    ]
                  }
      responses:
        200:
          body:
            application/json:
  /removeproduct:
    post:
      description: delete opportunity product
      body:
          application/json:
            example: |
                  {
                    "opportunityname": "Saito - Ground-mounted Panels",
                    "products": [
                        {
                          "productcode": "SPG-01",
                          "quantity": 35
                        },
                        {
                          "productcode": "SPG-02",
                          "quantity": 20
                        }
                    ]
                  }
      responses:
        200:
          body:
            application/json:
  /quote:
    get:
       queryParameters:
        opportunityname:
          description: opportunity name
          type: string
          required: true
       description: get quotes on the opportunity
       responses:
        200:
          body:
            application/json:
    post:
      description: create quote for the opportunity
      body:
          application/json:
            example: |
                  {
                    "opportunityname": "Saito - Ground-mounted Panels",
                    "quotename": "test-quote-1"
                  }
      responses:
        200:
          body:
            application/json:
/deletequotes:
  post:
    description: delete products
    body:
        application/json:
          example: |
            {
              "quoteidsfordelete": ["0Q0bm0000003a6zCAA", "0Q0bm0000003a8bCAA"],
              "callsource": "postman"
            }
    responses:
      200:
        body:
